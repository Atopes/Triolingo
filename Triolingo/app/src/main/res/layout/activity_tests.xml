<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_1"
    tools:context=".TestsActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="370dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72"
        app:srcCompat="@android:drawable/screen_background_light" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="334dp"
        android:layout_height="195dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#1D1E23"
            android:onClick="onRadioButtonClicked"
            android:shadowColor="#1D1E23"
            android:text="Koľko máš rokov?"
            android:textColor="#1D1E23" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#1D1E23"
            android:onClick="onRadioButtonClicked"
            android:text="Ako sa máš?"
            android:textColor="#1D1E23" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#1D1E23"
            android:onClick="onRadioButtonClicked"
            android:text="Odkiaľ si?"
            android:textColor="#1D1E23" />

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#1D1E23"
            android:onClick="onRadioButtonClicked"
            android:text="Koľko je hodín?"
            android:textColor="#1D1E23"
            android:textColorHint="#1D1E23" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="370dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFAA00"
        android:onClick="onNext"
        android:text="ĎALEJ"
        android:textColor="#1D1E23"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.9" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="306dp"
        android:layout_height="202dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bubble1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="185dp"
        android:layout_height="171dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/glassestrio" />

    <TextView
        android:id="@+id/question"
        android:layout_width="183dp"
        android:layout_height="102dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="52dp"
        android:text="How are you?"
        android:textAlignment="center"
        android:textColor="#1D1E23"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7" />

    <TextView
        android:id="@+id/questionNuber"
        android:layout_width="219dp"
        android:layout_height="94dp"
        android:gravity="center"
        android:text="OTÁZKA Č. "
        android:textColor="#1D1E23"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

</androidx.constraintlayout.widget.ConstraintLayout>